<%= form_for [post.region, post]  do |form| %>
  <div>
  <%= form.label :title %>
  <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div>
    <%= form.collection_check_boxes(:category_ids, Category.all, :id, :text) %>
  </div>

  <%= form.submit %>
<% end %>
